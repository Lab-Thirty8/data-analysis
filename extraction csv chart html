<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
</head>
<body>
    <h2>ONS UK Consumer Prices Index<br>including owner occupiers' housing costs</h2>

    <canvas id="chart" width="800" height="400"></canvas>

    <script>
       //  Data Source: https://www.ons.gov.uk/economy/inflationandpriceindices/timeseries/l55o/mm23

        chartIt();

        async function chartIt() {
            const data = await getData();
            const ctx = document.getElementById('chart').getContext('2d');

            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                labels: data.xs,
                datasets: [{
                    label: 'ONS UK CPIH',
                    data: data.ys,
                    backgroundColor: [
                        'rgba(14, 194, 208, 0.5)',
                        'rgba(119, 229, 244, 0.5)',
                        'rgba(207, 251, 252, 0.5)'                        
                    ],
                    borderColor: ['rgba(14, 194, 208, 0.8)'],
                    borderWidth: 1,
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

    };

       async function getData() {
            const xAxis = [];
            const yAxis = [];

            const response = await fetch('./03d. CPIH_csv.csv');
            const data = await response.text();

            const rows = data.split('\n').slice(9);
            rows.forEach(row => {
            
                const columns = row.split(',');
                
                //x Axis
                const date = new Date(xAxis);
                const xValue = date.getFullYear();
                const dateString = (xValue);                                   
                xAxis.push(xValue(columns[0]));
                
                //y Axis
                const Text = yAxis.toString();
                const yValue = Text.slice(1, 4);                  
                yAxis.push(yValue(columns[1]));
                
            });
            return { xAxis, yAxis }; 
       };

    </script>

</body>
</html>
